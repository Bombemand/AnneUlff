function mouseClicked() {

 

  //felt 1
  if (felt1 === 0 && mouseX > 0 && mouseX < kasse && mouseY > 0 && mouseY < kasse) {
    felt1 = 1;
 player = !player;
  }



  //felt 2
  if (felt2 === 0 && mouseX > kasse && mouseX < kasse * 2 && mouseY > 0 && mouseY < kasse) {
    felt2 = 1;
 player = !player;
  }


  //felt 3
  if (felt3 === 0 && mouseX > kasse * 2 && mouseX < width && mouseY > 0 && mouseY < kasse) {
    felt3 = 1;
 player = !player;
  }


  //felt 4
  if (felt4 === 0 && mouseX > 0 && mouseX < kasse && mouseY > kasse && mouseY < kasse * 2) {
    felt4 = 1;
 player = !player;
  }


  //felt 5
  if (felt5 === 0 && mouseX > kasse && mouseX < kasse * 2 && mouseY > kasse && mouseY < kasse * 2) {
    felt5 = 1;
 player = !player;
  }


  //felt 6
  if (felt6 === 0 && mouseX > kasse * 2 && mouseX < width && mouseY > kasse && mouseY < kasse * 2) {
    felt6 = 1;
 player = !player;
  }


  //felt 7
  if (felt7 === 0 && mouseX > 0 && mouseX < kasse && mouseY > kasse * 2 && mouseY < height) {
    felt7 = 1;
 player = !player;
  }

  //felt 8
  if (felt8 === 0 && mouseX > kasse && mouseX < kasse * 2 && mouseY > kasse * 2 && mouseY < height) {
    felt8 = 1;
 player = !player;
  }

  //felt 9
  if (felt9 === 0 && mouseX > kasse * 2 && mouseX < width && mouseY > kasse * 2 && mouseY < height) {
    felt9 = 1;
 player = !player;
  }
}


function keyPressed() {
  if (key === 'r') {
  felt1=0;
    felt2=0;
    felt3=0;
    felt4=0;
    felt5=0;
    felt6=0;
    felt7=0;
    felt8=0;
    felt9=0;
    player=false;
    
    clear();
    background(176, 199, 163);
    
  }

}
  
