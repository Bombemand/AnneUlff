let kasse;
let felt1 = 0;
let felt2 = 0;
let felt3 = 0;
let felt4 = 0;
let felt5 = 0;
let felt6 = 0;
let felt7 = 0;
let felt8 = 0;
let felt9 = 0;
let player = false;


function setup() {
  createCanvas(600, 600);
  background(176, 199, 163);
  kasse = width / 3;

}

function draw() {
